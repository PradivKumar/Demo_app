
	<div class="row">
		 <div class="col-md-6 col-md-offset-3">
	<%= form_for(@user) do |f| %>
	<%=render 'shared/error_messages', object: f.object%>
		<%=f.label :name%>
		<%=f.text_field :name, class: 'form_control'%>
		<%=f.label :mob%>
		<%=f.text_field :mob, class: 'form_control'%>
		<%=f.label :dob%>
		<%=f.date_field :dob, class: 'form_control'%>
		<%=f.label :password%>
		<%=f.password_field :password, :placeholder => 'Should be atleast 6 characters', class: 'form_control'%>
		<%=f.label :password_confirmation, "Confirmation"%>
		<%=f.password_field :password_confirmation, :placeholder => 'Should be atleast 6 characters', class: 'form_control'%>
		<%= f.submit yield(:button_text), class: "btn btn-primary" %>

	<%end%>
</div>
</div>