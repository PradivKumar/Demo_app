<!DOCTYPE html>
<html>
  <head>
<title>
  <%= fulltitle(yield(:title))%>
</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>

      <header class="navbar navbar-fixed-top navbar-custom">
      <div class="container">
         <%= link_to "Connect", index_path, id: "logo"%>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", index_path, id: "nav_elements"%></li>
            
             <% if logged_in? %>
              <li>
                <%= link_to "Users", front_path, id: "nav_elements" %> </li>
              <li>
                <%=link_to "Notifications", notification_path, id: "nav_elements"%></li>
                
                <li><%=link_to "My Posts", user_path(current_user), id: "nav_elements"%></li>
                <li><%= link_to "Edit", edit_user_path(current_user), id: "nav_elements" %> </li>
                <li><%= link_to "Log out", logout_path, id: "nav_elements", method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, id: "nav_elements" %></li>
        <% end %>
          </ul>
        </nav>
      </div>
    </header>

<div class = container>
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    <%= yield %>
    <%#= debug(params) if Rails.env.development? %>
    <%#=render 'layouts/footer'%>
  </div>
  </body>
</html>
