<html>
<head>
	  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	</head>
<%=form_tag comments_path(current_user.comments.build), method: :post do %>

<div class = "col-md-7"><div class="com_box"><%=text_area_tag :content, nil, :placeholder => 'Leave a Comment!'%></div></div><br>
<div><%=hidden_field_tag :post_id, @current_post.id%></div>
<div class = "col-md-2"><div class="com_button"><%= button_tag :submit do %>
    <i class='material-icons', style="font-size: 18px">send</i>
<% end %></div></div>
<%end%>

</html>