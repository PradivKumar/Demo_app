<html>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %> 

  </h1>
    </section>
    <section class="stats">
    	<%=render 'shared/fol_count'%>
      <%=render 'shared/post_form' if current_user == @user%> 
    </section>
   
  </aside>
 <div class= "col-md-8">
 	<%=render 'follow_form' if logged_in?%>
 	<%if @user.posts.any?%>
 	<%if @user.following?(current_user) || current_user == @user%>
  <h1> My Posts </h1>

 		<ol class="posts">
 			<%=render @posts %>
      
 		</ol>
 		<%=will_paginate @posts%>
 	<%end%>
  <%end%>
</div>
</div>
</html>