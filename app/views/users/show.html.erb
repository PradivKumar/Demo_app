<html>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<h1>
  <%= gravatar_for @user %>
  <%= @user.name %> 

  </h1> 
    </section>
    <section class="stats">
    	<%=render 'shared/fol_count'%><br><br>
      <%=render 'shared/post_form' if current_user == @user%> 
    </section>
   
  </aside>
  <br><br>
  
 <div class= "col-md-8">
  <div class="main">
  <div class="col-md-6"><div class ="followform">
 	<%=render 'follow_form' if logged_in?%>
 </div></div>
 <div class="col-md-6">
 <div class="blockform">
    <%=render 'block_form' if logged_in?%></div>
 </div></div>
 	<%if @user.posts.any?%>
 	<%if (@user.following?(current_user) && !@user.blocking?(@user,current_user) && !current_user.blocking?(current_user, @user)) || current_user == @user%>
 		<ul class="posts">
        <h1> My Posts </h1>
 			<%=render @posts %>
      <%=will_paginate @posts%>
 		</ul>
 	<%end%>
  <%if (!@user.following?(current_user) && !current_user.blocking?(current_user, @user)) && current_user != @user%>
    <ul class="posts">
        <h1> My Posts </h1>
      <%=render @public_posts %>
      <%=will_paginate @posts%>
    </ul>
  <%end%>
  <%end%>
</div>

</div>
</html>